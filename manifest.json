{
  "manifest_version": 2,

  "name": "Extension for Google Play Music",
  "description": "Adds easy dropdown controls and keyboard shortcuts to Google Play Music.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://play.google.com/music/*"],
      "js": ["scripts/jquery.js", "scripts/music.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "https://play.google.com/music/*"
  ]
}
